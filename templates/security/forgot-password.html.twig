{% extends 'layouts/auth.html.twig' %}
{% block title %}{{ 'security.forgot_password.title'|trans }}{% endblock %}

{% block content %}
    <h1 class="auth-title">{{ 'security.forgot_password.title'|trans }}</h1>
    <p class="auth-subtitle mb-5">{{ 'security.forgot_password.auth_subtitle'|trans }}</p>

    {{ form_start(form) }}
        <div class="form-group position-relative has-icon-left mb-4">
            {{ form_widget(form.email, {attr: {class: 'form-control form-control-xl'}}) }}
            <div class="form-control-icon">
                <i class="bi bi-envelope"></i>
            </div>
        </div>
        <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5">{{ 'security.forgot_password.form.submit'|trans }}</button>
    {{ form_end(form) }}

<div class="text-center mt-5 text-lg fs-4">
    <p class='text-gray-600'>
        {{ 'security.forgot_password.remember_account'|trans({'%loginRoute%': path('app_login')})|raw }}
    </p>
</div>
{% endblock %}
