{% extends 'layouts/base.html.twig' %}

{% block body %}
    <div id="app">
        <div id="sidebar" data-controller="sidebar">
            <twig:Sidebar/>
        </div>
        <div id="main" class="layout-navbar">
            <header class="mb-3">
                {{ include('_partials/vertical-nav.html.twig') }}
            </header>
            <div id="main-content">
                {% block content %}
                {% endblock %}
            </div>
            <footer>
                <div class="footer clearfix mb-0 text-muted">
                    <div class="float-start">
                        <p>{{ 'now'|date('Y') }} <a href="https://github.com/zuramai/mazer">&copy; Mazer</a></p>
                    </div>
                    <div class="float-end">
                        <p>Crafted with
                            <span class="text-danger">
                                <twig:ux:icon height="1rem" width="1rem" name="bi:heart"/>
                            </span> by <a href="https://zuramai.github.io/mazer/demo/index.html">Zuramai</a>
                        </p>
                    </div>
                </div>
            </footer>
        </div>
    </div>
{% endblock %}
