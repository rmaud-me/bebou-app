{% extends 'layouts/base.html.twig' %}

{% block importmap %}
    {{ importmap(['app', 'pages-auth']) }}
{% endblock %}

{% block body %}
    <div id="auth">
        <div class="row h-100">
            <div class="col-lg-5 col-12">
                <div id="auth-left">
                    <div class="auth-logo">
                        <a href="{{ path('auth_login') }}"><img src="{{ asset('images/logo/logo.svg') }}" alt="Logo"></a>
                    </div>
                    {% block content %}{% endblock %}
                </div>
            </div>
            <div class="col-lg-7 d-none d-lg-block">
                <div id="auth-right">

                </div>
            </div>
        </div>
    </div>
{% endblock %}
