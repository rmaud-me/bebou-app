{% props emoji = null %}
<div {{ attributes.defaults({class: 'card'}) }}>
    <div class="card-body px-4 py-4.5">
        <div class="row">
            <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-5 d-flex justify-content-start ">
                <div class="stats-icon purple">
                    {% if emoji %}
                        <div class="fs-4">{{ emoji }}</div>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-7 d-inline-flex align-items-center">
                {% block content %}
                {% endblock %}
            </div>
        </div>
    </div>
</div>
