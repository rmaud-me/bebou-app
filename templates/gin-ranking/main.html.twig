{% extends 'layouts/main.html.twig' %}
{% block title %}Gin Ranking{% endblock %}
{% block content %}
    <div class="page-heading">
        <h3>Gin Ranking</h3>
    </div>
    <div class="page-content">
        {% if gins is empty %}
            <div class="align-items-center">
                <span>{{ 'gin_ranking.list.no_gin'|trans }}</span> <br/>
                <a class="btn btn-primary" href="{{ path('gin_ranking_new') }}">{{ 'gin_ranking.list.add'|trans }}</a>
            </div>
        {% else %}
            <a class="btn btn-primary" href="{{ path('gin_ranking_new') }}">{{ 'gin_ranking.list.add'|trans }}</a>
            <table class="table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Cat√©gorie</th>
                        <th>{{ ux_icon('mdi:gear-outline', {width: 32, height: 32}) }}</th>
                    </tr>
                </thead>
                <tbody>
                {% for gin in gins %}
                    <tr>
                        <td>{{ gin.name }}</td>
                        <td>{{ gin.category|trans }}</td>
                        <td><a href="{{ path('gin_ranking_edit', {id: gin.id}) }}">{{ ux_icon('solar:pen-bold', {width: 32, height: 32}) }}</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}
